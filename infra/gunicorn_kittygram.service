[Unit]
Description=gunicorn daemon for Kittygram project
After=network.target

[Service]
User=yc-user
Group=yc-user
WorkingDirectory=/home/yc-user/infra_sprint1/kittygram_backend
ExecStart=/home/yc-user/infra_sprint1/venv/bin/gunicorn --workers 3 --bind unix:/home/yc-user/infra_sprint1/kittygram_backend/kittygram.sock kittygram_backend.wsgi:application

[Install]
WantedBy=multi-user.target
